<!--draw.html-->
<script src="sketchpad.js" charset="utf-8" defer></script>
<script src="draw.js" charset="utf-8" defer></script>

<main class="sketchpad-container" id="sketchpad-container">
  <canvas class="sketchpad" id="sketchpad"></canvas>
</main>

<div id="button-container">
  <button class="sketchbutton" id="undo-button">Undo</button>
  <button class="sketchbutton" id="redo-button">Redo</button>
  <input type="color" id="color-button">
  <div class="slide-container" id="stroke-size">
    <input type="range" min="1" max="30" value = "10" class="slider" id="myRange">
  </div>
  <button type="button" class="sketchbutton" id="animate-button">Animate</button>
  <button type="button" class="sketchbutton" id="modal-button">Save</button>
</div>

<!--Should this modal be a handlebar?-->
<div id="modal-backdrop" class="hidden"></div>
<div id="save-sketch-modal" class="hidden">
  <form action="/draw" method="post" class="modal-dialog">

    <div class="modal-header">
      <h3>Save A Sketch</h3>
      <button type="button" id="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div id='image-preview'>
        <img id='modal-preview' src="preview/png">
        <input type="text" id="imgURL" name="url" class="hidden">
      </div>
      <div class="sketch-input-element">
        <label for="title-input">Title</label>
        <input type="text" name="title" id="title-input">
      </div>
      <div class="sketch-input-element">
        <label for="author-input">Author</label>
        <input type="text" name="author" id="author-input">
      </div>
      <div class="sketch-input-element">
        <label for="password-input">Password</label>
        <input type="password" name="password" id="password-input">
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button" id="modal-cancel-button">Cancel</button>
      <button type="submit" class="modal-accept-button" id="modal-accept-button">Save Sketch</button>
    </div>
  </form>
</div>
