<main class="sketchpad-container" id="sketchpad-container">
<canvas class="sketchpad" id="sketchpad"></canvas>
</main>

<div id="button-container">
<button class="sketchbutton" id="undo-button">Undo</button>
<button class="sketchbutton" id="redo-button">Redo</button>
<input type="color" id="color-button">
<div class="slide-container" id="stroke-size">
<input type="range" min="1" max="30" value = "10" class="slider" id="myRange">
</div>
<button type="button" class="sketchbutton" id="animate-button">Animate</button>
<button type="button" class="sketchbutton" id="modal-button">Save</button>
</div>

<div id="modal-backdrop" class="hidden"></div>
<div id="save-sketch-modal" class="hidden">
<div class="modal-dialog">

<div class="modal-header">
<h3>Save A Sketch</h3>
<button type="button" id="modal-close-button">&times;</button>
</div>

<div class="modal-body">
<div id='image-preview'>
<img id='modal-preview' src="preview/png">
</div>
<div class="sketch-input-element">
<label for="title-input">Title</label>
<input type="text" id="title-input"></textarea>
</div>
<div class="sketch-input-element">
<label for="author-input">Author</label>
<input type="text" id="author-input">
</div>
<div class="sketch-input-element">
<label for="password-input">Password</label>
<input type="password" id="password-input">
</div>
</div>
